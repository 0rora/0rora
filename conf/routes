# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Primary content
GET         /                         controllers.HomeController.login
GET         /dashboard                controllers.DashboardController.dashboard

# Sources
POST        /sources/csv              controllers.SourcesController.uploadCSV

# Data
GET         /payments/historyAfter    controllers.PaymentsController.listHistoryAfter(k: Long, q: Int, d: Boolean)
GET         /payments/historyBefore   controllers.PaymentsController.listHistoryBefore(k: Long, q: Int, d: Boolean)
GET         /payments/schedule        controllers.PaymentsController.listScheduled

# Authentication
GET         /logout                   controllers.LoggedInController.logout
POST        /doLogin                  controllers.UserController.processLoginAttempt

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

